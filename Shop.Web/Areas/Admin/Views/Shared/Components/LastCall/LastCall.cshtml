@model Shop.Domain.Entities.Shop.Site.ContactUs

@if (Model != null)
{
    <div class="card">
        <div class="card-body">
            <h5 class="card-title mb-3">New Contact</h5>

            <p class="card-title-desc">
                @Model.Message
            </p>

            <div class="mt-3">
                <p class="font-size-12 text-muted mb-1">Email Address</p>
                <h6 class="">@Model.Email</h6>
            </div>

            <div class="mt-3">
                <p class="font-size-12 text-muted mb-1">Name</p>
                <h6 class="">@Model.Name</h6>
            </div>

            <div class="mt-3">
                <p class="font-size-12 text-muted mb-1">Subject</p>
                <h6 class="">
                    @Model.Subject
                </h6>
            </div>

        </div>
    </div>
}