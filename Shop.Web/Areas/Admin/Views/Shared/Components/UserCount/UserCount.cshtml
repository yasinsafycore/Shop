@model List<Shop.Domain.Entities.Account.User>

@if (Model != null)
{
    <div>
        <div class="pb-3">
            <div class="row align-items-center text-center">
                <div class="col-4">
                    <p class="mb-2">Active</p>
                    <h4 class="mb-0 text-success">@Model.Where(p => !p.IsBan).Count()</h4>
                </div>
                <div class="col-4">
                    <p class="mb-2">All Users</p>
                    <h4 class="mb-0 text-info">@Model.Count()</h4>
                </div>
                <div class="col-4">
                    <p class="mb-2">Blocked</p>
                    <h4 class="mb-0 text-warning">@Model.Where(p => p.IsBan).Count()</h4>
                </div>
            </div>
        </div>
    </div>
}