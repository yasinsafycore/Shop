@using Shop.Domain.Entities.Admin.Products
@model Shop.Domain.ViewModels.Admin.Products.AddProductsViewModel

@{
    ViewData["Title"] = "Add Product";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var categories = ViewData["Categorie"] as List<Categories>;
}

@section Styles
    {
    <style>
        .ck-editor__editable {
            min-height: 200px !important;
        }
    </style>
}

<div class="row">
    <div class="col-md-12 col-xl-12">

        <div class="card">
            <div class="card-body">

                <!-- Tab panes -->
                <div class="tab-content p-3 text-muted">
                    <div class="tab-pane" id="revenue" role="tabpanel" style="position: relative;">
                        <div id="revenue-chart" class="apex-charts mt-4" style="min-height: 315px;"><div id="apexcharts0zaiaxdw" class="apexcharts-canvas apexcharts0zaiaxdw" style="width: 0px; height: 300px;"><svg id="SvgjsSvg1026" width="0" height="300" xmlns="http://www.w3.org/2000/svg" version="1.1" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:svgjs="http://svgjs.com/svgjs" class="apexcharts-svg" xmlns:data="ApexChartsNS" transform="translate(0, 0)" style="background: transparent;"><g id="SvgjsG1029" class="apexcharts-annotations"></g><g id="SvgjsG1028" class="apexcharts-inner apexcharts-graphical"><defs id="SvgjsDefs1027"></defs></g></svg><div class="apexcharts-legend"></div></div></div>
                        <div class="resize-triggers"><div class="expand-trigger"><div style="width: 1px; height: 1px;"></div></div><div class="contract-trigger"></div></div>
                    </div>
                    <form asp-action="AddProducts" asp-controller="Product" enctype="multipart/form-data">

                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label>Title</label>
                                    <input type="text" class="form-control" asp-for="Title" placeholder="Enter...">
                                    <span asp-validation-for="Title" class="text-danger m-1"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label>Sub Title</label>
                                    <textarea type="text" class="form-control" rows="3" asp-for="SubTitle"></textarea>
                                    <span asp-validation-for="SubTitle" class="text-danger m-1"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label>Description</label>
                                    <textarea asp-for="Description" id="editor" rows="5"></textarea>
                                    <span asp-validation-for="Description" class="text-danger m-1"></span>
                                </div>
                            </div> <!-- end col -->
                        </div>

                        <hr />

                        <div class="row mt-4">

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Product Price</label>
                                    <input asp-for="ProductPrice" class="form-control" placeholder="__$__">
                                    <span asp-validation-for="ProductPrice" class="text-danger"></span>
                                </div>
                            </div> <!-- end col -->

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>Product inventory</label>
                                    <input type="number" class="form-control" asp-for="NumberOfProducts">
                                    <span asp-validation-for="NumberOfProducts" class="text-danger"></span>
                                </div>
                            </div> <!-- end col -->

                        </div>

                        <hr />

                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label>Categories</label>
                                    <select asp-for="CategoriesId" class="form-control">
                                        <option>Please select a category</option>
                                        @if (categories != null && categories.Any())
                                        {
                                            foreach (var item in categories)
                                            {
                                                <option value="@item.Id">@item.Title</option>
                                            }
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group mb-4 mt-3">
                                    <label>IMG input</label>
                                    <input class="form-control-file" asp-for="Img" type="file">
                                    <span asp-validation-for="Img" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="pt-2">
                            <button type="submit" class="btn btn-primary btn-lg waves-effect waves-light">Save</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts
    {

    <script src="https://cdn.ckeditor.com/ckeditor5/35.3.2/classic/ckeditor.js"></script>

    <script>
    ClassicEditor
        .create( document.querySelector( '#editor' ) )
        .catch( error => {
            console.error( error );
        } );
    </script>

}