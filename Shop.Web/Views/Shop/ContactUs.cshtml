@model Shop.Domain.ViewModels.Shop.Site.ContactUsViewModel

@{
    ViewData["Title"] = "Contact Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />
<br />
<div class="container">
    <div class="get-in-touch-wrap">
        <h3>Contact to Admin</h3>
        <div class="contact-from contact-shadow">
            <form asp-action="ContactUs" asp-controller="Shop" method="post">
                <div class="row">
                    <div class="col-lg-6">
                        <input asp-for="Name" type="text" placeholder="Name">
                    </div>
                    <div class="col-lg-6">
                        <input asp-for="Email" type="email" placeholder="Email">
                    </div>
                    <div class="col-lg-12">
                        <input asp-for="Subject" type="text" placeholder="Subject">
                    </div>
                    <div class="col-lg-12">
                        <textarea asp-for="Message" placeholder="Your Message"></textarea>
                    </div>
                    <div class="col-lg-12">
                        <button class="submit" type="submit">Send Message</button>
                    </div>
                </div>
            </form>
            <p class="form-messege"></p>
        </div>
    </div>
</div>
<br />