@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />
<div class="container">
    <div class="col-lg-12">
        <div class="your-order-area">
            <h3>How to send product</h3>
            <form asp-action="Checkout" asp-controller="Shop">
                <div class="your-order-wrap gray-bg-4">
                    <div class="payment-method">
                        <div class="your-order-info order-shipping">
                            <ul>
                                <li>
                                    How To Buy <p>Payment at the door </p>
                                </li>
                            </ul>
                        </div>
                        <br>
                        <div class="pay-top sin-payment">
                            <input id="payment_method_1" class="input-radio" type="radio" value="cheque" checked="checked" name="payment_method">
                            <label for="payment_method_1"> Send to the address in the user panel </label>
                        </div>
                        <div class="pay-top sin-payment">
                            <input id="payment-method-2" class="input-radio" type="radio" value="cheque" name="payment_method">
                            <label for="payment-method-2">Adding a new address</label>
                            <div class="payment-box payment_method_bacs">
                                <p>If you want the product to be sent to another person ((<a asp-action="Address" asp-controller="Shop"> enter a new address </a>))</p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class=" mt-40">
                    <input type="submit" value="Send Products"></input>
                </div>

            </form>
        </div>
    </div>
</div>

<br />