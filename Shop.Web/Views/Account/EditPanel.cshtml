@model Shop.Domain.ViewModels.Account.EditPanelViewModel

@{
    ViewData["Title"] = "Edit Panel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="tab-pane fade active show" id="account-info" role="tabpanel">
    <div class="myaccount-content">
        <h3>Account Details</h3>
        <div class="account-details-form">
            <form asp-action="EditPanel" asp-controller="Account" method="post">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="single-input-item">
                            <label for="first-name" class="required">First Name</label>
                            <input type="text" asp-for="FirstName">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="single-input-item">
                            <label for="last-name" class="required">Last Name</label>
                            <input type="text" asp-for="LastName">
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="single-input-item">
                    <button class="check-btn sqr-btn ">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>