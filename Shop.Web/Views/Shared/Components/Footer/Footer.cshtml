@using Shop.Domain.Entities.Admin.Setting.Footer;
@model List<Shop.Domain.Entities.Admin.Setting.Footer.FooterLabel>

@{
    var social = ViewData["Social"] as Social;
}

@if (Model.Any())
{
    @foreach (var item in Model)
    {
        <div class="col-lg-2 col-md-4 col-6 col-sm-6">
            <div class="footer-widget mb-30 ml-135">
                <div class="footer-title-3 text-center">
                    <h3>@item.Title</h3>
                </div>
                <div class="footer-list-3 text-center">
                    <ul>
                        @foreach (var i in item.FooterLinks)
                        {
                            <li><a href="@i.Url">@i.Title</a></li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    }
    @if (social != null)
    {
        <div class="col-lg-2 col-md-4 col-6 col-sm-6">
            <div class="footer-widget mb-30 ml-135">
                <div class="footer-title-3 text-center">
                    <h3>Social Netowrk</h3>
                </div>
                <div class="footer-list-3 text-center">
                    <ul>
                        <li><a href="@social.Facebook">FaceBook</a></li>
                        <li><a href="@social.Twitter">Twitter</a></li>
                        <li><a href="@social.YouTube">YouTube</a></li>
                        <li><a href="@social.Instagram">Instagram</a></li>
                    </ul>
                </div>
            </div>
        </div>
    }
}
else
{
    <div class="text-center">
        <div class="alert alert-secondary" role="alert">
            <h4 class="alert-heading">NO Data!</h4>
            <p>Unfortunately, no information is available yet, if other information is available this alert will not be displayed.</p>
        </div>
    </div>
}